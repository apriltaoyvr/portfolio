---
import H1 from "../components/ui/h1.astro";
import Link from "../components/ui/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import GrainBackground from "../components/grain-background";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<GrainBackground 
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> April <br /> Tao </H1>
				</div>

				<div>
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="/projects">Portfolio</Link>
						</div>

						<Navigation client:load>
							<Link href="/about" variant="secondary">About</Link>
							<Link href="/resume" variant="secondary">Resume</Link>
							<Link href="/contact" variant="secondary">Contact</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
